@model EcomTask.Models.ProductReviewVM

@{
    ViewData["Title"] = "MoreDetail";
}

<h1>MoreDetail</h1>

<div>
    <h4>ProductReviewVM</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>
<div>
    <table>
        <tr>
            <th>
                Rating
                </th>
            <th>Comment</th>
        </tr>
        @foreach (Review r in Model.Reviews)
        {
            <tr>
                <td>@r.Rating</td>
                <td>@r.Comment</td>
            </tr>

        }
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
